{
    "compilerOptions": {
        "target": "es2018",
        "module": "ESNext",
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "newLine": "lf",
        "moduleResolution": "node",
        "lib": ["ES2018", "DOM"],
        "allowJs": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "declaration": true
    },
    "include": [
        "src/**/*.ts", "src/**/*.js"
    ]
}